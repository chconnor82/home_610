<div class="page-header">
  <h1>User styles</h1>
</div>

<p><a href="/user_styles/new" class="btn btn-primary">Add a New User Style</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image url</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_styles.each do |user_style| %>
      <tr>
        <td><%= user_style.image_URL %></td>
        <td><%= user_style.name %></td>
        <td>
          <a href="/user_styles/<%= user_style.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/user_styles/<%= user_style.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_user_style/<%= user_style.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

