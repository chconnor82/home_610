<div class="page-header">
  <h1>Edit Room Preference #<%= @room_preference.id %></h1>
</div>

<% if @room_preference.errors.any? %>
  <% @room_preference.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_room_preference/<%= @room_preference.id %>" class="form-horizontal">
  <!-- Label and input for type_one -->
  <div class="form-group">
    <label for="type_one" class="col-sm-2 control-label">
      Type one
    </label>
    <div class="col-sm-10">
      <input type="text" id="type_one" name="type_one" placeholder="Type one" class="form-control" value="<%= @room_preference.type_one %>">
    </div>
  </div>

  <!-- Label and input for type_two -->
  <div class="form-group">
    <label for="type_two" class="col-sm-2 control-label">
      Type two
    </label>
    <div class="col-sm-10">
      <input type="text" id="type_two" name="type_two" placeholder="Type two" class="form-control" value="<%= @room_preference.type_two %>">
    </div>
  </div>

  <!-- Label and input for type_three -->
  <div class="form-group">
    <label for="type_three" class="col-sm-2 control-label">
      Type three
    </label>
    <div class="col-sm-10">
      <input type="text" id="type_three" name="type_three" placeholder="Type three" class="form-control" value="<%= @room_preference.type_three %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Room Preference" class="btn btn-primary">
    </div>
  </div>
</form>
