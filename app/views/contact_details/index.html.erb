<div class="page-header">
  <h1>Contact details</h1>
</div>

<p><a href="/contact_details/new" class="btn btn-primary">Add a New Contact Detail</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Contact</th>
      <th>Preferences</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_details.each do |contact_detail| %>
      <tr>
        <td><%= contact_detail.name %></td>
        <td><%= contact_detail.address %></td>
        <td><%= contact_detail.phone %></td>
        <td><%= contact_detail.contact %></td>
        <td><%= contact_detail.preferences %></td>
        <td>
          <a href="/contact_details/<%= contact_detail.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/contact_details/<%= contact_detail.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_contact_detail/<%= contact_detail.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

