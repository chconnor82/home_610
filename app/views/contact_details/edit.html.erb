<div class="page-header">
  <h1>Edit Contact Detail #<%= @contact_detail.id %></h1>
</div>

<% if @contact_detail.errors.any? %>
  <% @contact_detail.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_contact_detail/<%= @contact_detail.id %>" class="form-horizontal">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <textarea id="name" name="name" placeholder="Name" class="form-control" rows="3"><%= @contact_detail.name %></textarea>
    </div>
  </div>

  <!-- Label and input for address -->
  <div class="form-group">
    <label for="address" class="col-sm-2 control-label">
      Address
    </label>
    <div class="col-sm-10">
      <textarea id="address" name="address" placeholder="Address" class="form-control" rows="3"><%= @contact_detail.address %></textarea>
    </div>
  </div>

  <!-- Label and input for phone -->
  <div class="form-group">
    <label for="phone" class="col-sm-2 control-label">
      Phone
    </label>
    <div class="col-sm-10">
      <input type="text" id="phone" name="phone" placeholder="Phone" class="form-control" value="<%= @contact_detail.phone %>">
    </div>
  </div>

  <!-- Label and input for contact -->
  <div class="form-group">
    <label for="contact" class="col-sm-2 control-label">
      Contact
    </label>
    <div class="col-sm-10">
      <input type="text" id="contact" name="contact" placeholder="Contact" class="form-control" value="<%= @contact_detail.contact %>">
    </div>
  </div>

  <!-- Label and input for preferences -->
  <div class="form-group">
    <label for="preferences" class="col-sm-2 control-label">
      Preferences
    </label>
    <div class="col-sm-10">
      <input type="text" id="preferences" name="preferences" placeholder="Preferences" class="form-control" value="<%= @contact_detail.preferences %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Contact Detail" class="btn btn-primary">
    </div>
  </div>
</form>
